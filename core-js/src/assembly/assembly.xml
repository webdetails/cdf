<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.0 https://maven.apache.org/xsd/assembly-2.2.0.xsd">
  <id>cdf</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <!-- region Underscore -->
    <fileSet>
      <directory>${webjars.target.directory}/underscore/${underscore.version}</directory>
      <outputDirectory>cdf/lib/underscore</outputDirectory>
      <includes>
        <include>underscore.js</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/underscore/${underscore.version}</directory>
      <outputDirectory>cdf/cdf-legacy/lib/underscore</outputDirectory>
      <includes>
        <include>underscore.js</include>
      </includes>
    </fileSet>
    <!-- endregion Underscore -->

    <!-- region DataTables -->
    <fileSet>
      <directory>${webjars.target.directory}/datatables/${datatables.version}/js</directory>
      <outputDirectory>cdf/lib/dataTables/js</outputDirectory>
      <includes>
        <include>jquery.dataTables.js</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/datatables/${datatables.version}/images</directory>
      <outputDirectory>cdf/lib/dataTables/images</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/datatables/${datatables.version}/css</directory>
      <outputDirectory>cdf/lib/dataTables/css</outputDirectory>
      <includes>
        <include>jquery.dataTables_themeroller.css</include>
        <include>jquery.dataTables.css</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/datatables/1.13.5</directory>
      <outputDirectory>cdf/lib/dataTables</outputDirectory>
      <includes>
        <include>license.txt</include>
      </includes>
    </fileSet>
    <!-- endregion DataTables -->

    <!-- region jQuery et al. -->
    <fileSet>
      <directory>${webjars.target.directory}/jquery/${jquery.version}/dist</directory>
      <includes>
        <include>jquery.js</include>
      </includes>
      <outputDirectory>cdf/lib/jQuery</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/fancyapps__fancybox/${fancyapps__fancybox.version}/dist</directory>
      <includes>
        <include>jquery.fancybox.js</include>
        <include>jquery.fancybox.css</include>
      </includes>
      <outputDirectory>cdf/lib/fancybox</outputDirectory>
    </fileSet>
    <!-- endregion jQuery et al. -->

    <fileSet>
      <directory>${basedir}/src/main/javascript/</directory>
      <outputDirectory>cdf/</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${webjars.target.directory}/jquery-ui/${jquery-ui.version}/jquery-ui.js</source>
      <outputDirectory>cdf/lib/jQuery/</outputDirectory>
      <destName>jquery.ui.js</destName>
    </file>
  </files>
</assembly>
